{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "noEmit": false,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "plugins": [
    { "transform": "ts-transformer-keys/transformer" }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    ".eslintrc.js",
    "src/styles/*.ts"
  ]
}
